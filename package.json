{
  "name": "express-typescript-prisma-docker-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready boilerplate for building scalable, maintainable, and high-performance Express.js applications using TypeScript, Prisma ORM, and Docker. Designed for rapid development, easy deployment, and best practices in modern backend architecture. ðŸš€",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "seed": "ts-node prisma/employee-mock.ts && ts-node prisma/projects-mock.ts",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up --build"
  },
  "keywords": [],
  "author": {
    "name": "Rochiyat",
    "email": "rochiyat@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "prisma": "^6.4.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@prisma/client": "^6.4.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
